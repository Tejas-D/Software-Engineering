<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>toytoyerz.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PassServlet</servlet-name>
        <servlet-class>toytoyerz.PassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStock</servlet-name>
        <servlet-class>toytoyerz.ViewStock</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStock</servlet-name>
        <servlet-class>toytoyerz.AddStock</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockCat</servlet-name>
        <servlet-class>toytoyerz.StockCat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCompanies</servlet-name>
        <servlet-class>toytoyerz.ViewCompanies</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEmployees</servlet-name>
        <servlet-class>toytoyerz.ViewEmployees</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPassword</servlet-name>
        <servlet-class>toytoyerz.NewPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewInvoices</servlet-name>
        <servlet-class>toytoyerz.ViewInvoices</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PassServlet</servlet-name>
        <url-pattern>/PassServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStock</servlet-name>
        <url-pattern>/ViewStock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStock</servlet-name>
        <url-pattern>/AddStock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockCat</servlet-name>
        <url-pattern>/StockCat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCompanies</servlet-name>
        <url-pattern>/ViewCompanies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEmployees</servlet-name>
        <url-pattern>/ViewEmployees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPassword</servlet-name>
        <url-pattern>/NewPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewInvoices</servlet-name>
        <url-pattern>/ViewInvoices</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
